[alias]
    lgl = log --color=always --graph --pretty=format:'%<|(4)%C(bold red)%%h%Creset - %<(30,trunc)%s %C(green)%<|(14)%cs%Creset %C(brightblue)%<(15,trunc)%an%Creset %C(bold yellow)%(decorate:separator= )%Creset'
    lg = ! git log --color=always --graph --pretty=format:'%<|(4)%C(bold red)%%h%Creset - %<(30,trunc)%s %C(green)%<|(14)%cs%Creset %C(brightblue)%<(15,trunc)%an%Creset %n%C(bold yellow)%<|(13)%x20%(decorate:separator= )%Creset' | sed -e 's/\\(.*[-\\/].*\\)/\\1_LN_/' | grep _LN_ | sed 's/_LN_.*$//' | less

